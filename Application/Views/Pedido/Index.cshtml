@model IEnumerable<Application.Models.Pedido>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DireccionDeSolicitante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoDeUso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntregarA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActividadOperativa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observaciones1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observaciones2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PedidoEstado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DireccionDeSolicitante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDeUso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntregarA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActividadOperativa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Motivo)
            </td>
