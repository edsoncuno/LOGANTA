<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LOGANTA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LOGANTA</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 text-dark">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Pedido</a>
                            <div class="dropdown-menu">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Pedido" asp-action="Index">Lista de Pedidos</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Pedido" asp-action="ListarPendientes">Lista de Pedidos Pendientes</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Pedido" asp-action="ListarAprobadosPorElSolicitante">Lista de Pedidos Aprobados Por El Solicitante</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Pedido" asp-action="ListarAprobadosPorLogistica">Lista de Pedidos Aprobados Por Logística</a>
                                <a class="nav-link text-dark" href="~/Pedido/ListarConSolicitudesDeCotizacion">Lista de Pedidos con Solicitudes de Cotización Enviadas</a>
                                <a class="nav-link text-dark" href="~/Pedido/ListarConSolicitudesDeCotizacionCompletadas">Lista de Pedidos con Solicitudes de Cotización Completas</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Documento" asp-action="Index">Lista de Documentos</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Cuadro Comparativo</a>
                            <div class="dropdown-menu">
                                <a class="nav-link text-dark" href="~/CuadroComparativo/Listar">Lista de Cuadros Comparativos</a>
                            </div>                             
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - LOGANTA
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
